{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2020",
		"moduleResolution": "node",
		"noEmit": true,
		"rootDir": ".",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"lib": ["ES2020", "DOM"],
		"typeRoots": ["./node_modules/@types"],
		"types": []
	},
	"include": ["./*.ts"],
	"ts-node": {
		"esm": true
	}
}
